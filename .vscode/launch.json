{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Catalog",
            "args": [
                "${workspaceFolder}/microservices/catalog/src/main.ts"
            ],            
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "sourceMaps": true,
            "envFile": "${workspaceFolder}/microservices/catalog/.env",
            "cwd": "${workspaceRoot}/microservices/catalog",
            "console": "integratedTerminal"
        }
    ]
}